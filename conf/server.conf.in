# FRED server sample configuration
# Version: 1.4.1
# This file should be in /etc/fred/server.conf

#
# DATABASE CONNECTION
#

# Database credentials
host=@DBHOST@
port=@DBPORT@
dbname=@DBNAME@
user=@DBUSER@
password=@DBPASS@

# Connection timeout (seconds)
connect_timeout=2

#
# GENERAL SETTINGS
#

# FRED server CORBA name service
nameservice=@NSHOST@

# Maximum clients sessions allowed to connect to registrar interface (fred-rifd)
session_max=100
# Registrar interface session timeout
session_wait=300

# PDF generator path (see fred2pdf package)
docgen_path=@BINDIR@/fred-doc2pdf
docgen_template_path=@DATAROOTDIR@/fred-doc2pdf/

# File manager client path (see pyfred package and filemanager_client.py)
fileclient_path=@BINDIR@/filemanager_client

#
# LOGGING & DEBUGGING
#

# Supported log levels 
# EMERG       0       /* system is unusable */
# ALERT       1       /* action must be taken immediately */
# CRIT        2       /* critical conditions */
# ERR         3       /* error conditions */
# WARNING     4       /* warning conditions */
# NOTICE      5       /* normal but significant condition */
# INFO        6       /* informational */
# DEBUG       7       /* debug-level messages

# Log level
log_level=7
# Syslog local facility where to log (0-7) 
log_local=1

#
# System defaults
#

# Default report level of new NSSet
nsset_level=3

# Restrictive format of handle (CID: & NSSID: prefixes) or not?
restricted_handles=0

# Disable EPP notifier (massive uploads or performance tests)
disable_epp_notifier=0

# Database locking of multiple update epp commands on one object  
lock_epp_commands=1
